@{
    ViewData["Title"] = "Order Confirmed";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int orderId = (int)ViewData["OrderId"];
}

<div class="container py-5 text-center" style="max-width: 600px;">
    <div class="card p-5 shadow-lg border-success">
        <i class="bi bi-check-circle-fill text-success" style="font-size: 4rem;"></i>
        <h2 class="mt-3 text-success">Order Placed Successfully!</h2>
        
        @if (TempData["SuccessMessage"] != null)
        {
            <p class="lead">@TempData["SuccessMessage"]</p>
        }
        else
        {
            <p class="lead">Thank you for your order! Your payment has been processed.</p>
        }

        <h4 class="mb-4">
            Your Order Number is: <strong class="text-primary">#@orderId</strong>
        </h4>

        <hr />

        <p>The order was sent to restaurant</p>

        <a href="@Url.Action("Menu", "Home")" class="btn btn-primary mt-3">Continue Shopping</a>
        
    </div>
</div>