@{

    ViewData["Title"] = "Select Payment Method";

    Layout = "~/Views/Shared/_Layout.cshtml";

    // Retrieve the total passed from the Checkout action

    decimal cartTotal = (decimal)ViewData["CartTotal"];

}
<style>

    /* Custom style for the payment options */

    .payment-option {
        cursor: pointer;
        transition: all 0.2s ease-in-out;
        border: 2px solid #e9ecef; /* Light border */

        border-radius: 0.5rem;
        background-color: #fff;
    }

        .payment-option:hover {
            background-color: #f8f9fa; /* Subtle hover effect */

            border-color: #adb5bd;
        }

        /* Highlight the selected option */

        .payment-option input[type="radio"]:checked + .d-flex {
            border-left: 5px solid #007bff; /* Primary blue indicator */

            border-color: #007bff; /* Darker border for selection */

            background-color: #eaf5ff; /* Very light blue background */
        }

        /* Hide the default radio button */

        .payment-option input[type="radio"] {
            display: none;
        }

    .text-primary-blue {
        color: #007bff !important;
    }
</style>
<div class="container py-5" style="max-width: 650px;">
    <h2 class="text-center mb-5 text-primary-blue fw-light">
        <i class="bi bi-wallet-fill me-2"></i>Select Payment Method
    </h2>
    <div class="card p-4 shadow-lg mb-5 border-0">
        <div class="d-flex justify-content-between align-items-center">
            <h4 class="mb-0 text-muted">Order Total:</h4>
            <h3 class="mb-0 text-success fw-bold">₹@cartTotal</h3>
        </div>
    </div>

    <form asp-controller="User" asp-action="PlaceOrder" method="post" id="paymentForm">

        <div class="row g-4 mb-4">
            <div class="col-12">
                <label class="payment-option d-block shadow-sm">
                    <input type="radio" name="PaymentMethod" value="COD" required checked />
                    <div class="d-flex align-items-center p-3">
                        <i class="bi bi-cash-coin fs-3 me-3 text-success"></i>
                        <div>
                            <span class="fw-bold d-block fs-5">Cash On Delivery (COD)</span>
                            <small class="text-muted">Pay with cash when you receive the order.</small>
                        </div>
                        <i class="bi bi-check-circle-fill ms-auto text-success d-none check-icon"></i>
                    </div>
                </label>
            </div>
    </form>
    <form asp-controller="User" asp-action="PlaceOrder" method="post" id="paymentForm">

        <div class="row g-4 mb-4">
            <div class="col-12">
                <label class="payment-option d-block shadow-sm">
                    <input type="radio" name="PaymentMethod" value="UPI" required checked />
                    <div class="d-flex align-items-center p-3">
                        <i class="bi bi-cash-coin fs-3 me-3 text-success"></i>
                        <div>
                            <span class="fw-bold d-block fs-5">Online Payment (UPI)</span>
                            <small class="text-muted">Pay with UPI App.</small>
                        </div>
                        <i class="bi bi-check-circle-fill ms-auto text-success d-none check-icon"></i>
                    </div>
                </label>
            </div>
    </form>
    <button type="submit" class="btn btn-primary btn-lg w-100 fw-bold py-3 shadow-lg">
        <i class="bi bi-lock-fill me-2"></i> Place Order and Proceed (₹@cartTotal)
    </button>

    <div class="text-center mt-4">
        <a href="@Url.Action("Cart", "User")" class="btn btn-link text-muted">← Return to Cart</a>
    </div>
</div>

