@* Cart.cshtml *@
@using restapp.Controllers

@model List<CartItem>
 
@{

    ViewData["Title"] = "Your Cart";

    Layout = "~/Views/Shared/_Layout.cshtml";

    decimal cartTotal = 0;

}
 

<div class="container my-5">
    <div class="row">
        <div class="col-12 text-center mb-4">
            <h2 class="text-primary-blue">🛒 Shopping Cart</h2>
            <hr class="w-50 mx-auto" />
        </div>
    </div>
 @* === START: TempData Message Display (INSERT THIS BLOCK) === *@
    <div class="row">
        <div class="col-12">
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <strong>Success!</strong> @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <strong>Error:</strong> @TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
        </div>
    </div>
@if (Model != null && Model.Count > 0)

{
    <div class="row">
    <div class="col-lg-8">

    @foreach (var item in Model)

    {

        // Calculate item subtotal and add to grand total

        decimal itemSubtotal = item.Price * item.Quantity;

        cartTotal += itemSubtotal;
 
        // --- Cart Item Row ---
        <div class="card mb-4 shadow-sm cart-item-card">
        <div class="card-body p-3">
        <div class="d-flex align-items-center">
 
                            
        <div class="cart-item-image me-4 rounded-3">
            <i class="fas fa-utensils display-6 text-muted"></i>
        </div>
 
        <div class="flex-grow-1">
            <h5 class="card-title mb-0 fw-bold">@item.Name</h5>
            <p class="text-muted mb-0 small">Price: ₹@item.Price</p>
        </div>
 
        <div class="d-flex align-items-center me-4">
 
        <div class="quantity-btn-group me-3">
 
            <form asp-controller="User" asp-action="RemoveFromCartSubmit" method="post" style="display:inline;">
                <input type="hidden" name="id" value="@item.FoodItemId" />
                <input type="hidden" name="returnUrl" value="@(Context.Request.Path + Context.Request.QueryString)" />
                <button type="submit" class="quantity-btn minus-btn" title="Reduce quantity by 1" @(item.Quantity <= 1 ? "disabled" : "")>
                    <i class="fas fa-minus"></i>
                </button>
            </form>
 
        <span class="item-quantity px-3 fw-bold">@item.Quantity</span>
 
        <form asp-controller="User" asp-action="AddToCartSubmit" method="post" style="display:inline;">
            <input type="hidden" name="id" value="@item.FoodItemId" />
            <input type="hidden" name="returnUrl" value="@(Context.Request.Path + Context.Request.QueryString)" />
            <button type="submit" class="quantity-btn plus-btn" title="Increase quantity by 1">
                <i class="fas fa-plus"></i>
            </button>
        </form>
 
        </div>
        <span class="item-subtotal fw-bold fs-5 me-3">

            ₹@itemSubtotal
        </span>
        <form asp-controller="User" asp-action="RemoveItemFullyFromCart" method="post" style="display:inline;">
            <input type="hidden" name="id" value="@item.FoodItemId" />
            <button type="submit" class="btn btn-sm btn-remove-item"

                title="Remove item entirely from cart"

                onclick="return confirm('Are you sure you want to remove all @item.Name from your cart?');">
                <i class="fas fa-times"></i> 
            </button>
        </form>
 
            </div>
        </div>
    </div>
</div>

}
</div>
 
@* --- Cart Summary (Sidebar) --- *@
        <div class="col-lg-4">
            <div class="card cart-summary-card p-3 shadow-lg sticky-top">
                <h4 class="mb-3 text-center">Order Summary</h4>
                <ul class="list-group list-group-flush summary-list">
                    <li class="list-group-item d-flex justify-content-between">
                        <span>Subtotal (@Model.Count items)</span>
                        <span class="fw-bold">₹@cartTotal</span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between text-success">
                        <span>Delivery Fee</span>
                        <span class="fw-bold text-success">FREE</span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between fw-bold fs-5 cart-total-row">
                        <span>Total</span>
                        <span>₹@cartTotal</span>
                    </li>
                </ul>
                <a href="@Url.Action("Checkout", "User")" class="btn btn-primary interactive-btn mt-4 checkout-btn">Proceed to Payment</a>
                <a href="@Url.Action("Index", "Home")" class="btn btn-link text-muted mt-2">← Continue Shopping</a>
                </div>
            </div>
        </div>

 }

else

{
        <div class="alert alert-warning text-center cart-empty-message" role="alert">
            <i class="fas fa-box-open fa-2x mb-2"></i>
            <h4>Oops! Your cart is currently empty.</h4>
            <p>Start adding some delicious items to your order!</p>
        </div>
        <div class="text-center">
            <a href="@Url.Action("Index", "Home")" class="btn btn-primary interactive-btn mt-3">Go to Menu</a>
        </div>

    }
</div>
 